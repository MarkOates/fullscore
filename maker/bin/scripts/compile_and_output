#!/bin/bash

yellow='\033[1;33m'
reset_text='\033[0m'

declare -a commands=(
  "echo \"\n$yellow===== STAGE 0: Building Composition =====$reset_text\n\"; ruby app/lily_builder.rb"
  "echo \"\n$yellow===== STAGE 1: Converting Lilypond output to SVG  =====$reset_text\n\"; bin/scripts/lilypond -dbackend=svg output-lily.ly"
  "echo \"\n$yellow===== STAGE 2: Copying the output to HomeServer =====$reset_text\n\"; cp output-lily.svg ~/Repos/HomeServer/db/files/output-lily.svg"
)

rerun "${commands[0]} && ${commands[1]} && ${commands[2]}" -p "{app/lily_builder.rb,templates/lilypond-template.ly,app/**/*.rb}" -c
